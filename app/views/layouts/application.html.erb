<!DOCTYPE html>
<html>
	<head>
		<title>Hipster Haven Online Store</title>
		<%= stylesheet_link_tag    "application", media: "all",
		"data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>
	</head>
	<body class="<%= controller.controller_name %>">
		<div id="banner">
			<%= image_tag("haven_logo.png") %>
			<%= @page_title || "Hipster Haven" %>
		</div>
		<div id="columns">
			<div id="side">
				<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
				<%= render @cart %>
				<% end %>
				<% end %>
				<ul>
					<li>
						<a href="http://localhost:3000/">Home</a>
					</li>
					<li>
						<a href="http://localhost:3000/priv_policies">Privacy Policies</a>
					</li>
					<li>
						<a href="http://www..../news">News</a>
					</li>
					<li>
						<a href="http://www..../contact">Contact</a>
					</li>
				</ul>
			</div>
			<div id="main">
				<%= yield %>
			</div>
		</div>
	</body>
</html>